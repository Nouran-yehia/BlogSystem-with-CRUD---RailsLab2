<%= form_for(@post, url: @post) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,placeholder:"title...",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder:"write your post...",class:"form-control" %>
  </div>
  <div class="actions">
    <%= submit_tag btnt, class:"btn btn-#{btnc}"%>
  </div>
<% end %>
